= form_for(author) do |f|
  - if author.errors.any?
    #error_explanation
      %h2
        = pluralize(author.errors.count, "error")
        prohibited this author from being saved:
      %ul
        - author.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :second_name
    = f.text_field :second_name
  .field
    = f.label :biography
    = f.text_area :biography
  .field
    = f.label :gender
    = f.select :gender, ApplicationRecord::GENDERS, default: ApplicationRecord::GENDERS[0]
  .field
    = f.label :photo
    = f.file_field :photo
  .actions
    = f.submit
