= form_for(publisher) do |f|
  - if publisher.errors.any?
    #error_explanation
      %h2
        = pluralize(publisher.errors.count, "error")
        prohibited this publisher from being saved:
      %ul
        - publisher.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :publisher_name
    = f.text_field :publisher_name
  .field
    = f.label :publisher_logo
    = f.file_field :publisher_logo
  .field
    = f.label :publisher_location
    = f.text_field :publisher_location
  .actions
    = f.submit
