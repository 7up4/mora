= form_for reader, validate: true  do |f|
  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :second_name
    = f.text_field :second_name
  .field
    = f.label :gender
    = f.select :gender, ApplicationRecord::GENDERS
  .field
    = f.label :birthdate
    = f.text_field :birthdate, class: 'datepicker'
  .field
    = f.label :avatar
    = f.file_field :avatar
  .actions
    = f.submit
