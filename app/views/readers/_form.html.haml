= form_for(reader) do |f|
  - if reader.errors.any?
    #error_explanation
      %h2
        = pluralize(reader.errors.count, "error")
        prohibited this reader from being saved:
      %ul
        - reader.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :second_name
    = f.text_field :second_name
  .field
    = f.label :gender
    = f.select :gender, ApplicationRecord::GENDERS
  .field
    = f.label :birthdate
    = f.text_field :birthdate, class: 'datepicker'
  .field
    = f.label :avatar
    = f.file_field :avatar
  .actions
    = f.submit
